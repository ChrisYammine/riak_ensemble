{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_untyped_record,
    {parse_transform, lager_transform},
    {platform_define, "^R1[0-5]", no_otp_crypto_hash}
]}.
{deps, [
    {eleveldb, ".*", {git, "git://github.com/basho/eleveldb.git", {branch, "feature/otp-17"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}}
]}.
{eunit_opts, [verbose]}.
{edoc_opts, [preprocess, {dir, "edoc"}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.

{port_specs, [
    {".*", "priv/riak_ensemble.so",
        ["c_src/*.c*"],
        [{env, [{"CFLAGS", "$CFLAGS"}]}]}
]}.
